<Window x:Class="TerminalSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TerminalSystem"
        mc:Ignorable="d"
        Title="TerminalSystem" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*"/>
            <ColumnDefinition Width="627*"/>
        </Grid.ColumnDefinitions>
        <Label Content="IP:" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.163,-0.169" FontSize="20" VerticalContentAlignment="Center" Height="30"/>
        <TextBox x:Name="m_TerminalPort" HorizontalAlignment="Left" Margin="81.333,10,0,0" TextWrapping="Wrap" Text="12235" VerticalAlignment="Top" FontSize="20" Grid.Column="1" Height="30"/>
        <Button Content="启动终端" Grid.Column="1" HorizontalAlignment="Left" Margin="175.333,10,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-1.897,0.613" Height="30"/>
        <TextBox x:Name="m_TerminalIP" HorizontalAlignment="Left" Margin="92,10,0,0" TextWrapping="Wrap" Text="192.168.0.100" VerticalAlignment="Top" FontSize="20" Grid.ColumnSpan="2" Height="30"/>

    </Grid>
</Window>
